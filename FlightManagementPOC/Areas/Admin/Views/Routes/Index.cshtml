@model IEnumerable<FlightManagement.Model.Route>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Flight List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Routes" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>&nbsp;&nbsp;Create New Route</a>
        </div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">RouteNumber</th>
                <th scope="col">RouteName</th>
                <th scope="col">Source</th>
                <th scope="col">Destination</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var route in Model)
            {
                <tr class="table-light">
                    <td>@route.RouteNumber</td>
                    <td>@route.RouteName</td>
                    <td>@route.Source</td>
                    <td>@route.Destination</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Routes" asp-action="Edit" asp-route-id="@route.RouteNumber" class="btn btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Routes" asp-action="Delete" asp-route-id="@route.RouteNumber" class="btn btn-primary"><i class="bi bi-trash"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

