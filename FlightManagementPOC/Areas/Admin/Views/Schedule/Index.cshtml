@model IEnumerable<FlightManagement.Model.Schedule>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Flight List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Schedule" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i>&nbsp;&nbsp;Create New Schedule</a>
        </div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Schedule Number</th>
                <th scope="col">Flight number</th>
                <th scope="col">Airlines name</th>
                <th scope="col">Source</th>
                <th scope="col">Destination</th>
                <th scope="col">Seating capacity</th>
                <th scope="col">Arrival Time</th>
                <th scope="col">Departure Time</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var schedule in Model)
            {
                <tr class="table-light">
                    <td>@schedule.Id</td>
                    <td>@schedule.Flight.FlightNumber</td>
                    <td>@schedule.Flight.AirlinesName</td>
                    <td>@schedule.Route.Source</td>
                    <td>@schedule.Route.Destination</td>
                    <td>@schedule.Flight.SeatCapacity</td>
                    <td>@schedule.ArrivalTime</td>
                    <td>@schedule.DepartureTime</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Schedule" asp-action="Upsert" asp-route-id="@schedule.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Schedule" asp-action="Delete" asp-route-id="@schedule.Id" class="btn btn-primary"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>